@using TransactionProcessor.Entities.ViewModel
@inject IEntityService entityService
@inject IUriHelper UriHelper

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Transaction Administration</a>
    <button class="navbar-toggler" onclick="@ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>
<div class="@NavMenuCssClass" onclick="@ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <Icon Name="home"></Icon> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/datadefinition" Match="NavLinkMatch.Prefix">
                <Icon Name="list-rich"></Icon>
                Data Definition
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/referencedata/definition" Match="NavLinkMatch.Prefix">
                <Icon Name="spreadsheet"></Icon>
                Reference Data
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/validation" Match="NavLinkMatch.Prefix">
                <Icon Name="check"></Icon>
                Validation
            </NavLink>
        </li>
    </ul>
</div>

@functions {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
